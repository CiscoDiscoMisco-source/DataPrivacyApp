# PostgreSQL Supabase Connection
POSTGRES_URL=postgresql://postgres:[YOUR-PASSWORD]@[YOUR-PROJECT-REF]-pooler.supabase.co:6543/postgres?sslmode=require

# Supabase API Credentials
SUPABASE_URL=https://[YOUR-PROJECT-REF].supabase.co
SUPABASE_KEY=[YOUR-SUPABASE-ANON-KEY]

# JWT Settings
JWT_SECRET_KEY=[SECURE-JWT-SECRET]
JWT_ACCESS_TOKEN_EXPIRES=3600  # 1 hour

# App Settings
FLASK_ENV=development  # Change to 'production' in production
DEBUG=True  # Change to False in production

# Database Settings
SQLALCHEMY_TRACK_MODIFICATIONS=False

# Testing Database
TEST_POSTGRES_URL=postgresql://postgres:[YOUR-PASSWORD]@[YOUR-TEST-PROJECT-REF]-pooler.supabase.co:6543/postgres?sslmode=require
TEST_SUPABASE_URL=https://[YOUR-TEST-PROJECT-REF].supabase.co
TEST_SUPABASE_KEY=[YOUR-TEST-SUPABASE-ANON-KEY] 